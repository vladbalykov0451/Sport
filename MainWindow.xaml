        <Label Content="Авторизация пользователя" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox HorizontalAlignment="Center" Margin="0,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" Height="25" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="25" Margin="0,200,0,0" TextChanged="TextBox_TextChanged_1"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="455,174,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="447,225,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.493,-0.063"/>
        <Button Content="Вход" HorizontalAlignment="Center" Margin="0,273,0,0" VerticalAlignment="Top" Height="23" Width="72" Click="Button_Click_1" Cursor="Hand" Background="#FF76E383"/>
        <Button Content="Регистрация" HorizontalAlignment="Center" Margin="0,320,0,0" VerticalAlignment="Top" Height="24" Width="196" Click="Button_Click_2" Cursor="Hand" Background="#FF76E383"/>
        <Button Content="Вход для сотрудника" HorizontalAlignment="Center" Margin="0,382,0,0" VerticalAlignment="Top" Click="Button_Click" Cursor="Hand" Background="#FF76E383"/>
